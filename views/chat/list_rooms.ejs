<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><i class="fas fa-comments"></i> Danh sách phòng chat</h1>
        <a href="/rooms/new" class="btn btn-success"><i class="fas fa-plus-circle"></i> Tạo phòng mới</a>
    </div>

    <% if (typeof success_msg !== 'undefined' && success_msg) { %>
        <div class="alert alert-success" role="alert"><%= success_msg %></div>
    <% } %>
    <% if (typeof error_msg !== 'undefined' && error_msg) { %>
        <div class="alert alert-danger" role="alert"><%= error_msg %></div>
    <% } %>

    <% if (rooms.length > 0) { %>
        <ul class="list-group">
            <% rooms.forEach(room => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">
                            <a href="/rooms/<%= room.id %>"><%= room.name %></a>
                        </h5>
                        <p class="mb-1 text-muted"><%= room.description || 'Không có mô tả' %></p>
                        <small>Người tạo: <%= room.creator ? room.creator.username : 'Không rõ' %> | Tạo lúc: <%= new Date(room.createdAt).toLocaleString('vi-VN') %></small>
                    </div>
                    <a href="/rooms/<%= room.id %>" class="btn btn-primary btn-sm">Vào phòng</a>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p class="text-center">Chưa có phòng chat nào. <a href="/rooms/new">Hãy tạo một phòng mới!</a></p>
    <% } %>
</div>